<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2EAF6"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/MyPetsButton"
        android:layout_width="165dp"
        android:layout_height="49dp"
        android:text="My Pets"
        app:backgroundTint="#8ACAE8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.282" />

    <Button
        android:id="@+id/PetInformationButton"
        android:layout_width="165dp"
        android:layout_height="49dp"
        android:text="Pet Information"
        app:backgroundTint="#8ACAE8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/MyPetsButton"
        app:layout_constraintVertical_bias="0.138" />

    <Button
        android:id="@+id/AddPetButton"
        android:layout_width="165dp"
        android:layout_height="49dp"
        android:layout_marginBottom="156dp"
        android:text="Add Pet"
        app:backgroundTint="#8ACAE8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/PetInformationButton"
        app:layout_constraintVertical_bias="0.355" />

</androidx.constraintlayout.widget.ConstraintLayout>
